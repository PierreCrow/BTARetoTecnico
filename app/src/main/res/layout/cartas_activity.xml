<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bta.retotecnico.ui.view.activity.CartasActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCartaUno"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuide"
        app:layout_constraintRight_toLeftOf="@+id/verticalGuide"
        app:srcCompat="@drawable/cartavolteada"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCartaDos"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuide"
        app:layout_constraintLeft_toRightOf="@+id/verticalGuide"
        app:srcCompat="@drawable/cartavolteada"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCartaTres"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@+id/verticalGuide"
        app:layout_constraintTop_toBottomOf="@+id/horizontalGuide"
        app:srcCompat="@drawable/cartavolteada"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCartaCuatro"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/verticalGuide"
        app:layout_constraintTop_toBottomOf="@+id/horizontalGuide"
        app:srcCompat="@drawable/cartavolteada"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/horizontalGuideButtons" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConsultaEstadoAleatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Consultar estado aleatorio"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/tvUbicacion"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConsultaEstadoServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Consultar estado servidor"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btnConsultaEstadoAleatorio"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReiniciarJuego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Reiniciar juego"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btnConsultaEstadoServidor"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        tools:ignore="MissingConstraints" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>